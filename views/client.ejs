<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>videoChatApp</title>
    <link rel="stylesheet" href="./style.css" />
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://kit.fontawesome.com/07fca9da06.js" crossorigin="anonymous"></script>

    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
  </head>
  <body>
    <div class="header">
      <div class="logo">
        <h3>Video Chat</h2>
      </div>
    </div>  
    <div class="main">  
    <div class="main__left">
      <div class="videos__group">
        <div id="video-grid">

        </div>
      </div>
      <div class="options">
        <div class="options__left">
          <div id="muteButton" class="options__button">
            <i class="fa fa-microphone-slash"></i>
            <p>Mute</p>
          </div>
          <div id="stopVideo" class="options__button">
            <i class="fa fa-video"></i>
            <p>Stop Video</p>
          </div>
        </div>
        <div>
          <div id="participant" class="options__button">
            <i class="fa-solid fa-user-group"></i>
            <p>Participants</p>

          </div>
          <div id="present" class="options__button">
            <i class="fa-solid fa-square-caret-up fa-lg"></i>
            <p>Share Screen</p>

          </div>
         
          <div id="message" class="options__button">
            <i class="fa fa-message"></i>
            <p>Chat</p>
          </div>

          <div id="reactions" class="options__button">
            <i class="fa-solid fa-face-smile"></i>
            <p>Reactions</p>

          </div>
        </div>
        <div class="options__right">
          <div id="inviteButton" class="options__button">
            <i class="fas fa-user-plus"></i>
            <p>Invite</p>

          </div>
          <div id="leaveMeeting">
            End
          </div>
        </div>
      </div>
    </div>
    <div class="main__right">
      <div class="main__chat_window">
          <div id="messages">

          </div>
      </div>
      <div class="main__message_container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="send">
          Send
        </div>
      </div>
    </div>
  </div>
  </body>
  <script src="https://unpkg.com/peerjs@1.3.2/dist/peerjs.min.js"></script>
  <script src="./client.js"></script>
</html>
